PORT=5000
DATABASE_URL=postgresql://username:password@localhost:5432/subway_board
NODE_ENV=development

# Feature Flags
ENABLE_KAKAO_LOGIN=false

# Kakao OAuth (required only if ENABLE_KAKAO_LOGIN=true)
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_REDIRECT_URI=http://localhost:5000/api/auth/kakao/callback
KAKAO_REDIRECT_URI_PROD=https://your-production-domain.com/api/auth/kakao/callback

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WRITE_WINDOW_MS=900000
RATE_LIMIT_WRITE_MAX=50
RATE_LIMIT_READ_WINDOW_MS=60000
RATE_LIMIT_READ_MAX=100

# Database Connection
DB_POOL_MAX=20

# Pagination
DEFAULT_PAGE_LIMIT=20

# WebSocket
WS_MAX_ROOMS_PER_CLIENT=3

# Content Limits
POST_MAX_LENGTH=1000
COMMENT_MAX_LENGTH=500

# Subway Lines
MIN_LINE_ID=1
MAX_LINE_ID=9

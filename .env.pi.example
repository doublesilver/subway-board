# ============================================
# gagisiro.com - Raspberry Pi 환경 변수 템플릿
# .env 파일로 복사하여 사용: cp .env.pi.example .env
# ============================================

# ============================================
# PostgreSQL Database (로컬 Docker 컨테이너)
# ============================================
POSTGRES_USER=gagisiro
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=gagisiro

# Railway에서 마이그레이션 시 사용 (마이그레이션 후 삭제)
# RAILWAY_DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_HOST.proxy.rlwy.net:PORT/railway

# ============================================
# Application Security (필수)
# ============================================
# JWT 시크릿 생성: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# 관리자 API 키 (대시보드 접근용)
ADMIN_KEY=CHANGE_THIS_TO_ADMIN_KEY

# 관리자 대시보드 로그인 비밀번호
ADMIN_DASHBOARD_PASSWORD=CHANGE_THIS_TO_DASHBOARD_PASSWORD

# 관리자 JWT 시크릿 (별도 관리)
ADMIN_JWT_SECRET=CHANGE_THIS_TO_ADMIN_JWT_SECRET

# ============================================
# Frontend Configuration
# ============================================
# Tailscale Funnel URL 또는 공개 도메인
VITE_API_URL=https://gagisiro.com

# ============================================
# Monitoring (선택)
# ============================================
# Sentry DSN (에러 모니터링)
SENTRY_DSN=

# Grafana 관리자 설정
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
GRAFANA_ROOT_URL=http://localhost:3001

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WRITE_WINDOW_MS=900000
RATE_LIMIT_WRITE_MAX=50
RATE_LIMIT_READ_WINDOW_MS=60000
RATE_LIMIT_READ_MAX=100

# ============================================
# Database Pool (로컬 DB이므로 더 큰 풀 사용 가능)
# ============================================
DB_POOL_MAX=10

# ============================================
# Content Limits
# ============================================
POST_MAX_LENGTH=1000
COMMENT_MAX_LENGTH=500
